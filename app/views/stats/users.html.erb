<h2 class="text-center">Users View</h2>
<div class="container">
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>User #</th>
        <th>Last visited location</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <% if user.visits.present? %>
            <td><%= Location.find(user.visits.first.location_id).name %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
