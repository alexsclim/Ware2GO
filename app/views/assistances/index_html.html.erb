<h2 class="text-center">Assistance Requests</h2>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table">
        <thead class="thead-inverse">
          <tr>
            <th>User #</th>
            <th>Latitude</th>
            <th>Longitude</th>
          </tr>
        </thead>
        <tbody>
          <% @assistances.each do |assistance| %>
            <tr>
              <td><%= assistance.user_id %></td>
              <td><%= assistance.latitude %></td>
              <td><%= assistance.longitude %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
